<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//dal.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fly.common.model.mapper.UserMapper">

    <select id="find" resultType="com.fly.user.model.Person">
        SELECT * FROM user where bid=#{bid} and person_id=#{personId}
    </select>
    <resultMap id="staffBind" type="com.fly.user.model.Person">
        <result column="bid" property="bid"/>
        <result column="bind_id" property="bindId"/>
        <result column="name" property="name"/>
        <result column="age" property="age"/>

    </resultMap>
    <select id="findBind" resultType="com.fly.user.model.Person">
        SELECT * FROM user_bind where bid=#{bid} and bind_id=#{bindId}
    </select>
    <select id="findByName" resultType="com.fly.user.model.Person">
        SELECT * FROM `user` WHERE `name` LIKE '%${name}%'
    </select>
</mapper>